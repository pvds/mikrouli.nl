<nav class="nav js-nav" role="navigation" tabindex="-1">

  {# Menu Toggle Button #}
  <button
      class="nav__toggle js-nav-open"
      aria-expanded="false"
      aria-controls="nav-menu"
      aria-label="open-menu"
  >
    <span class="nav__toggle-label">Menu</span>
    <svg class="nav__toggle-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
      <path d="M436 124H12c-6.627 0-12-5.373-12-12V80c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373
      12-12 12zm0
      160H12c-6.627 0-12-5.373-12-12v-32c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373 12-12 12zm0 160H12c-6.627 0-12-5.373-12-12v-32c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373 12-12 12z" />
    </svg>
  </button>

  {# Nav Links #}
  <div class="nav__menu js-nav-menu" id="nav-menu">
    <header class="nav__menu-header">
      <span class="nav__toggle-label">Menu</span>
      <button
          class="nav__toggle js-nav-close"
          aria-expanded="false"
          aria-controls="nav-menu"
          aria-label="close-menu"
      >
        <svg class="nav__toggle-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
          <path
              d="M207.6 256l107.72-107.72c6.23-6.23 6.23-16.34 0-22.58l-25.03-25.03c-6.23-6.23-16.34-6.23-22.58 0L160 208.4 52.28 100.68c-6.23-6.23-16.34-6.23-22.58 0L4.68 125.7c-6.23 6.23-6.23 16.34 0 22.58L112.4 256 4.68 363.72c-6.23 6.23-6.23 16.34 0 22.58l25.03 25.03c6.23 6.23 16.34 6.23 22.58 0L160 303.6l107.72 107.72c6.23 6.23 16.34 6.23 22.58 0l25.03-25.03c6.23-6.23 6.23-16.34 0-22.58L207.6 256z" />
        </svg>
      </button>
    </header>
    <div class="nav__menu-main">
      <ul class="nav__menu-list">
        {%- for item in collections.navigation | eleventyNavigation -%}
          {%- set isCurrent = (item.url == page.url) -%}
          {%- set isParent = item.url != '/' and item.url in page.url -%}
          <li class="nav__item{% if isCurrent or isParent %} nav__item--active{% endif %}">
            <a
                class="nav__link js-nav-link"
                href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}"
                {% if isCurrent %}aria-current="page"{% endif %}
                tabindex="-1"
            >
              {{ item.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</nav>
